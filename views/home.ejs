<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      body {
        font-family: Verdana, Geneva, Tahoma, sans-serif;
        margin: 40px;
        font-size: 22px;
        display: flex;
        justify-content: center;
        flex-direction: column;
        align-items: center;
        gap: 20px;
      }
      form {
        background-color: gainsboro;
        padding: 20px 100px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 10px;
      }
      input,
      button {
        font-size: 22px;
      }
      input {
        padding: 5px;
      }
      button {
        background-color: black;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
      }
      td {
        padding: 5px 20px;
      }
    </style>
    <link rel="stylesheet" href="../css/main.css" />
    <title><% if (locals.headers) { %> <%= headers.title %> <% } %></title>
  </head>
  <body class="body">
    <form action="/url" method="POST">
      <h3>Enter your url:</h3>

      <input type="text" name="url" id="" placeholder="https://example.com" />

      <button type="submit">Generate</button>
    </form>

    <div>
      <% if (locals.id) { %>
      <p>Your shorted url is: http://localhost:3000/url/redirect/<%= id %></p>
      <% } %>
    </div>

    <% if (locals.urls) { %>
    <div>
      <table>
        <thead>
          <th>S. No</th>
          <th>Short Id</th>
          <th>Redirect</th>
          <th>Clicks</th>
          <th>Shoted URL</th>
        </thead>
        <tbody>
          <% urls.forEach((url, ind) => { %>
          <tr>
            <td><%= ind + 1 %></td>
            <td><%= url.shortId %></td>
            <td><%= url.redirectUrl %></td>
            <td><%= url.visitHistory.length %></td>
            <td>
              <a
                target="_blank"
                href="http://localhost:3000/url/redirect/<%= url.shortId %>"
                >http://localhost:3000/url/redirect/<%= url.shortId %></a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <% } %>
  </body>
</html>
